<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_nav"
    app:startDestination="@id/notesListFragment">

    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.example.notes.ui.fragments.NotesListFragment"
        android:label="NotesListFragment" >
        <action
            android:id="@+id/action_notesListFragment_to_addNotesFragment"
            app:destination="@id/addNotesFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/addNotesFragment"
        android:name="com.example.notes.ui.fragments.AddNotesFragment"
        android:label="AddNotesFragment" >
        <action
            android:id="@+id/action_addNotesFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
    </fragment>
</navigation>